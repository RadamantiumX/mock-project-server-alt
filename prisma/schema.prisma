generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model User {
  id Int @id @default(autoincrement())
  nickname String @unique
  email String @unique
  password String 
  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime? @updatedAt @db.Timestamp()
  post Post[]
  responses ResponsePost[]
  favs Favorite[]
  likeVideo LikeVideo[]
  likePost LikePost[]
  likeResponse LikeResponse[]
}

model Post {
  id Int @id @default(autoincrement())
  content String
  nickname String
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int 
  createdAt DateTime @default(now())
  videoId String
  responses ResponsePost[]
  like LikePost[]
}

model ResponsePost {
  id Int @id @default(autoincrement()) 
  content String
  nickname String
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int
  createdAt DateTime @default(now())
  postedBy Post? @relation(fields: [postId], references: [id],onDelete: Cascade)
  postId Int?
  responseBy ResponsePost? @relation("RespondedResponses", fields: [responseId], references: [id])
  responseId Int?
  likes LikeResponse[]
  responses ResponsePost[] @relation("RespondedResponses")
}

model Favorite {
  id Int @id @default(autoincrement())
  videoId String 
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int
  createdAt DateTime @default(now())
}

model LikeVideo {
  id Int @id @default(autoincrement())
  videoId String
  like Boolean
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int
  createdAt DateTime @default(now())
}

model LikePost {
  id Int @id @default(autoincrement())
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int
  like Boolean
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int
  createdAt DateTime @default(now())
}

model LikeResponse {
  id Int @id @default(autoincrement())
  responsePost ResponsePost @relation(fields: [responseId], references: [id], onDelete: Cascade)
  responseId Int
  like Boolean
  author User @relation(fields: [authorId], references: [id],onDelete: Cascade)
  authorId Int
  createdAt DateTime @default(now())
}

model Message {
  id Int @id @default(autoincrement())
  name String
  email String
  message String
  createdAt DateTime @default(now())
}
